<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TempActivity"
    android:background="#000"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_bookmark_border_24"
                    android:clickable="true"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/microsoft"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp">
                <!-- ... (unchanged) ... -->
                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="USA New York"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <TextView
                    android:id="@+id/temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sr.Product Designer"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textSize="24sp"
                    tools:ignore="HardcodedText"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <TextView
                    android:id="@+id/expr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3-4 Years"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#525252">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/userPhoto1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="User Photo"
                            android:scaleType="centerCrop"
                            android:src="@drawable/map"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/workplace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remote"
                            android:textColor="@color/white"
                            android:layout_marginTop="8dp"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    android:layout_marginStart="2dp"
                    app:cardBackgroundColor="#525252">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/userPhoto"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="User Photo"
                            android:scaleType="centerCrop"
                            android:src="@drawable/clock"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full-Time"
                            android:textColor="@color/white"
                            android:layout_marginTop="8dp"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    android:layout_marginStart="4dp"
                    app:cardBackgroundColor="#525252">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/userPhoto2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="User Photo"
                            android:scaleType="centerCrop"
                            android:src="@drawable/salari"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/salary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$40/hr"
                            android:textColor="@color/white"
                            android:layout_marginTop="8dp"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginEnd="9dp"
                android:layout_marginStart="9dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/description"
                    android:text="Description of compney"
                    android:textSize="15dp"/>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.MaterialDivider"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginEnd="9dp"
                android:layout_marginStart="9dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eligibility"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/eligibility"
                    android:text="Lorem ipsum dolor sit, amet consectetur adipisicing elit. Blanditiis molestiae nostrum quisquam architecto reprehenderit natus cum, omnis commodi? Cum rerum saepe ad eveniet ducimus excepturi?
"
                    android:textSize="15dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <Button
            android:id="@+id/apply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="#525252"
            android:text="Apply Now"
            android:textStyle="bold"
            android:textSize="20sp">
        </Button>
    </LinearLayout>
</LinearLayout>