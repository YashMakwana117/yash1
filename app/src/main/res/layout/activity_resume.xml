<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="#000"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_keyboard_arrow_right_24"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/_270sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/frame"
        android:layout_marginTop="@dimen/_40sdp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            />
        <ImageView
            android:id="@+id/imgresume"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/baseline_upload_file_24"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/txtresume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Resume"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            tools:ignore="HardcodedText"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center">
        <Button
            android:id="@+id/choosePdfButton"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:backgroundTint="#525252"
            android:text="Browse"
            android:textStyle="bold"
            android:textSize="22dp">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:backgroundTint="#525252"
            android:text="Next"
            android:textStyle="bold"
            android:textSize="22dp">
        </Button>
    </LinearLayout>
</LinearLayout>